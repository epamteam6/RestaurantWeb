<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginErrorServlet</servlet-name>
        <servlet-class>com.controller.LoginErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginErrorServlet</servlet-name>
        <url-pattern>/login_error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.controller.user.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/makeOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ttf</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>

    <!--USE IT ONLY FOE SESSION CONTROL!!!-->
    <filter>
        <filter-name>SessionSecurityFilter</filter-name>
        <filter-class>com.controller.filters.SessionSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionSecurityFilter</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/login.jsp</url-pattern>
        <url-pattern>/login.html</url-pattern>
        <url-pattern>/join</url-pattern>
        <url-pattern>/join.jsp</url-pattern>
        <url-pattern>/join.html</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ConfirmationServlet</servlet-name>
        <servlet-class>com.controller.admin.ConfirmationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmationServlet</servlet-name>
        <url-pattern>/confirmation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BillCreationServlet</servlet-name>
        <servlet-class>com.controller.admin.BillCreationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillCreationServlet</servlet-name>
        <url-pattern>/bill</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaidOrdersServlet</servlet-name>
        <servlet-class>com.controller.PaidOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaidOrdersServlet</servlet-name>
        <url-pattern>/paid</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnPaidOrdersServlet</servlet-name>
        <servlet-class>com.controller.admin.AllReadyOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnPaidOrdersServlet</servlet-name>
        <url-pattern>/ready</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.controller.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoneOrdersServlet</servlet-name>
        <servlet-class>com.controller.DoneOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoneOrdersServlet</servlet-name>
        <url-pattern>/done</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreatedOrdersServlet</servlet-name>
        <servlet-class>com.controller.CreatedOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatedOrdersServlet</servlet-name>
        <url-pattern>/createdOrders</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.controller.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/makeOrder</url-pattern>
        <url-pattern>/make_order.jsp</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/logout.html</url-pattern>
        <url-pattern>/logout.jsp</url-pattern>
        <url-pattern>/confirmation</url-pattern>
        <url-pattern>/confirmation.html</url-pattern>
        <url-pattern>/confirmation.jsp</url-pattern>
        <url-pattern>/bill</url-pattern>
        <url-pattern>/bill.html</url-pattern>
        <url-pattern>/bill_creation.jsp</url-pattern>
        <url-pattern>/ready</url-pattern>
        <url-pattern>/ready.html</url-pattern>
        <url-pattern>/completed_orders.jsp</url-pattern>
        <url-pattern>/payment</url-pattern>
        <url-pattern>/payment.html</url-pattern>
        <url-pattern>/payment.jsp</url-pattern>
        <url-pattern>/paid</url-pattern>
        <url-pattern>/paid.html</url-pattern>
        <url-pattern>/paid_orders.jsp</url-pattern>
        <url-pattern>/done</url-pattern>
        <url-pattern>/done.html</url-pattern>
        <url-pattern>/done_page.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RestrictionSecurityFilter</filter-name>
        <filter-class>com.controller.filters.RestrictionSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionSecurityFilter</filter-name>
        <url-pattern>/bill</url-pattern>
        <url-pattern>/confirmation</url-pattern>
        <url-pattern>/</url-pattern>
    </filter-mapping>
</web-app>